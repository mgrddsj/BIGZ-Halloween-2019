<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RouteSelectActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/route_select_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:fontFamily="@font/feast_of_flesh_bb_regular"
                    android:text="Select a route"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="36sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:onClick="gotoRouteC"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="4dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/feast_of_flesh_bb_regular"
                        android:text="Route C"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:onClick="gotoRouteA"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="4dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/feast_of_flesh_bb_regular"
                        android:text="Route A"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:onClick="gotoRouteP"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="4dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/feast_of_flesh_bb_regular"
                        android:text="Route P"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:onClick="gotoRouteH"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="4dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:background="#FFFFFF"
                        android:fontFamily="@font/feast_of_flesh_bb_regular"
                        android:text="Route H"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="30sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>